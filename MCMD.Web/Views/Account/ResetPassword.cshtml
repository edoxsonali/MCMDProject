@model MCMD.ViewModel.Account.ResetPasswordConfirmModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}



@*<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>*@


<script type="text/javascript">

    $(document).ready(function () {
        $("#btnCancel").click(function () {
            location.href = '@Url.Action("Login", "Account")';
        });
    });

    @*$(document).ready(function () {
        if ('@ViewBag.StatusMessage' != '') {
            $('#uploadModal').reveal({
                closeonbackgroundclick: false,
                dismissmodalclass: 'close-reveal-modal'
            });
        }
    });*@
</script>

<div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm("ResetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical login-form", role = "form" }))
    {
        @Html.ValidationSummary(true)
        <h3 class="form-title">Reset Your Password</h3>
        <div>
            <span class="text-error">@TempData["ErrorMessage"]</span>
        </div>


        <div class="control-group">

            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-user"></i>
                    @Html.DisplayFor(m=>m.EmailId);

                    @Html.PasswordFor(m => m.NewPassword, new { @class = "m-wrap placeholder-no-fix", @type = "password", @placeholder = "Enter password *", @maxlength = "30", @autocomplete = "off", @style = "min-height:34px;" })
                    @*@Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "text-error" })*@
                </div>
                <span class="alert-error"> @Html.ValidationMessageFor(m => m.NewPassword)</span>
            </div>
        </div>
        <div class="control-group">

            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-lock"></i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "m-wrap placeholder-no-fix", @type = "password", @placeholder = "Enter confirm password *", @maxlength = "30", @autocomplete = "off", @style = "min-height:34px;" })
                    @*@Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "text-error" })*@

                </div>
                <span class="alert-error"> @Html.ValidationMessageFor(m => m.ConfirmPassword) </span>
            </div>
        </div>
        <div class="form-actions">
            <label class="checkbox">
                *Indicates mandatory fields.
            </label>
            <div class="form-actions">
                <button type="submit" class="btn blue">Submit</button>
                <button type="submit" class="btn" id="btnCancel">Cancel</button>
            </div>

            @*<button type="submit" class="btn green pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>*@
        </div>


    }
    <!-- END LOGIN FORM -->

</div>
