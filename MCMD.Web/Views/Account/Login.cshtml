@model MCMD.ViewModel.Account.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="login-container">
            <div class="form-container">
                <h2>Login</h2>
                <p>Sign in using your Edox registered account:</p>
                <div class="form-horizontal">
                    <div class="validation-summary">@Html.ValidationSummary(true)</div>
                    <div class="form-group">
                        <label for="firstname" class="col-sm-4 control-label">Email Id<span>*</span><b>:</b></label>
                        <div class="col-sm-8 input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @placeholder = "Enter user name", @maxlength = "50", @autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.EmailId)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-sm-4 control-label">Password<span>*</span><b>:</b></label>
                        <div class="col-sm-8 input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", @maxlength = "50", @autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label>
                                  @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe
                            </label>)*@
                        <div class="col-sm-12 login button">
                            <button type="submit" class="btn">Login</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-7">
                            <span>*</span>Indicates mandatory fields.
                        </label>
                        <div class="col-sm-7">
                            <p>
                                @Html.ActionLink("Register a new user?", "RegisterUser", "User")
                            </p>
                            @Html.ActionLink("Forget your password?", "ForgotPassword")

                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new MCMD.ViewModel.Administration.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}