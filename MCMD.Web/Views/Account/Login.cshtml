@model MCMD.ViewModel.Account.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical login-form", role = "form" }))
    {
        @Html.ValidationSummary(true)
        <h3 class="form-title">Login to your account</h3>
        <div>
            <span class="text-error">@TempData["ErrorMessage"]</span>
        </div>
        <div class="control-group">

            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-user"></i>
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "m-wrap placeholder-no-fix", @placeholder = "*Enter Email Id", @maxlength = "50", @autocomplete = "off", @style = "min-height:34px;" })                
                </div>
                @Html.ValidationMessageFor(m => m.EmailId, string.Empty, new { @class = "text-error" })
              
            </div>
        </div>
        <div class="control-group">

            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "m-wrap placeholder-no-fix", @placeholder = "*Enter password", @maxlength = "50", @autocomplete = "off", @style = "min-height:34px;" })
                    
                </div>
                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-error" })
                
            </div>
        </div>
        <div class="form-actions">
          
                <span class="required">*</span> Indicates mandatory fields.
            

            <button type="submit" class="btn green pull-right">
                Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
        <div class="forget-password">
            <h4>Forgot your password ?</h4>
            <p>
                no worries, click @Html.ActionLink("here", "ForgotPassword")
                to reset your password.
            </p>
        </div>
        <div class="create-account">
            <p>
                Don't have an account yet ?&nbsp;
                @Html.ActionLink("Create an account", "RegisterUser", "User")
            </p>
        </div>

    }
    <!-- END LOGIN FORM -->

</div>
<!-- END LOGIN -->
@Scripts.Render("~/bundles/jqueryval")
