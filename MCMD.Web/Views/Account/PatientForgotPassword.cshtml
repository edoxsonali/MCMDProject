@model MCMD.ViewModel.Account.ForgetPasswordModel
@{
    ViewBag.Title = "PatientForgotPassword";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>

<div class="content">
    <!-- BEGIN FORGOT PASSWORD FORM -->
    @using (Html.BeginForm("PatientForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical login-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3>Forget Password ?</h3>
        <p>Enter your e-mail address below to reset your password.</p>
        <div>
            <span class="text-error">@TempData["ErrorMessage"]</span>

            <span class="text-success"> @TempData["Message"]</span>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-icon left">
                    <i class="icon-envelope"></i>

                    @Html.TextBoxFor(m => m.EmailId, new { @class = "m-wrap placeholder-no-fix", @placeholder = "*Enter email ID", @maxlength = "50", @autocomplete = "off", @style = "min-height:34px;" })


                </div>
                @Html.ValidationMessageFor(m => m.EmailId, string.Empty, new { @class = "text-error" })
            </div>
        </div>
        <div class="form-actions">
            <button type="button" id="back-btn" class="btn" onclick="location.href='@Url.Action("patientLogin", "Account")'">
                <i class="m-icon-swapleft"></i> Back
            </button>
            <button type="submit" class="btn green pull-right">
                Submit <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
    }
    <!-- END FORGOT PASSWORD FORM -->
</div>
@Scripts.Render("~/bundles/jqueryval")





