@model MCMD.ViewModel.Administration.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">

    <h2>@ViewBag.Title.</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form">
        <div class="form-container">
            <div class="col-sm-8">
                <div class="form-group">
                    <div class="col-sm-3 control-label">User Name<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control " })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">First Name<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Last Name<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Email<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Password<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Confirm Password<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Password Question<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.PasswordQuestion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 control-label">Password Answer<span>*</span><b>:</b></div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.PasswordAnswer, new { @class = "form-control" })
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>*@

                <div class="form-group">
                    <div class="col-sm-4 control-label"></div>
                    <div class="col-md-4">
                        <button type="Submit" id="btnRegister" name="btnRegister" value="Register">Register</button>
                      
                    </div>
                </div>

            </div>
        </div>
    </div>
    }
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
